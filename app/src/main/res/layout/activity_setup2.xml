<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eg.phonemanager.Activity.Setup2Activity"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="2.手机卡绑定"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过绑定sim卡:\n下次重启手机发现sim卡变化,就会发送报警短信"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#000"/>
    <com.eg.phonemanager.view.SettingItemView
        xmlns:phoneManager="http://schemas.android.com/apk/res/com.eg.phonemanager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        phoneManager:desTitle="点击绑定sim卡"
        phoneManager:desOn="sim已绑定"
        phoneManager:desOff="sim卡未绑定">
    </com.eg.phonemanager.view.SettingItemView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
    </LinearLayout>
</LinearLayout>
