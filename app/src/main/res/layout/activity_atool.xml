<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eg.phonemanager.Activity.AToolActivity"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="高级工具"/>
    <TextView
        android:id="@+id/tv_query_phone_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="归属地查询"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/star_on"
        android:background="@drawable/selector_atool_item_bg"/>
    <TextView
        android:id="@+id/tv_backup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="备份短信"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/star_on"
        android:background="@drawable/selector_atool_item_bg"/>
    <TextView
        android:id="@+id/tv_select_often_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="常用号码查询"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/star_on"
        android:background="@drawable/selector_atool_item_bg"/>
    <TextView
        android:id="@+id/tv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="程序锁"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/star_on"
        android:background="@drawable/selector_atool_item_bg"/>

</LinearLayout>
